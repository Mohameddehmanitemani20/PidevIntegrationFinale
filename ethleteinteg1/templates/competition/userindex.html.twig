{% extends 'front.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <h1>Competition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>nbEquipe</th>
                <th>date</th>
                <th>adresse</th>
                <th>nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competition in competition %}

            <tr>
                <td>{{ competition.nbEquipe }}</td>
                <td>{{ competition.date  }}</td>
                <td>{{ competition.adresse }}</td>
                <td>{{ competition.nom }}</td>
                <td>
                    <a href="{{ path('app_competition_showf', {'idCompetition': competition.idCompetition}) }}">show</a>                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
